// 全局样式定义 - 自定义28色调色板系统

// 自定义28色调色板结构
export struct CustomPalette {
    // 主色系 (Primary)
    primary-50: color,
    primary-100: color,
    primary-200: color,
    primary-300: color,
    primary-400: color,
    primary-500: color,
    primary-600: color,
    
    // 中性色系 (Neutral)
    neutral-0: color,
    neutral-50: color,
    neutral-100: color,
    neutral-200: color,
    neutral-300: color,
    neutral-400: color,
    neutral-500: color,
    neutral-600: color,
    neutral-700: color,
    neutral-800: color,
    neutral-900: color,
    
    // 功能色系 (Functional)
    success-400: color,
    success-500: color,
    warning-400: color,
    warning-500: color,
    error-400: color,
    error-500: color,
    
    // 扩展色系 (Extended)
    accent-400: color,
    accent-500: color,
    info-400: color,
    info-500: color,
}

