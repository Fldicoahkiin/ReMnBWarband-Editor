// 尺寸规范
export struct Sizes {
    // 内边距
    p-xs: length,
    p-sm: length,
    p-md: length,
    p-lg: length,
    p-xl: length,
    
    // 间距
    s-xs: length,
    s-sm: length,
    s-md: length,
    s-lg: length,
    s-xl: length,
    
    // 圆角
    r-xs: length,
    r-sm: length,
    r-md: length,
    r-lg: length,
    r-xl: length,
    
    // 高度
    h-xs: length,
    h-sm: length,
    h-md: length,
    h-lg: length,
    h-xl: length,
    
    // 字体
    font: length,
    icon: length,
    line: length,
}

// 动画时长
export struct Durations {
    short: duration,
    mid: duration,
    long: duration,
}

// 主样式系统 - 自定义扁平化设计系统
export global Styles {
    // 主题切换
    in-out property <bool> is-dark-mode: false;
    
    // 当前调色板
    out property <CustomPalette> colors: root.is-dark-mode ? DarkTheme.colors : LightTheme.colors;
    
    // 扁平化设计颜色映射
    out property <color> background: colors.neutral-50;
    out property <color> surface: colors.neutral-0;
    out property <color> surface-container: colors.neutral-50;
    out property <color> surface-container-low: colors.neutral-50;
    out property <color> surface-container-high: colors.neutral-200;
    out property <color> surface-dim: colors.neutral-100;
    
    out property <color> primary: colors.primary-500;
    out property <color> primary-hover: colors.primary-600;
    out property <color> primary-light: colors.primary-400;
    out property <color> primary-container: colors.primary-100;
    
    out property <color> text-primary: colors.neutral-900;
    out property <color> text-secondary: colors.neutral-800;
    out property <color> text-tertiary: colors.neutral-600;
    out property <color> text-on-primary: colors.neutral-0;
    
    out property <color> success: colors.success-500;
    out property <color> success-container: colors.success-400.with-alpha(0.1);
    out property <color> warning: colors.warning-500;
    out property <color> error: colors.error-500;
    out property <color> error-container: colors.error-400.with-alpha(0.1);
    
    out property <color> border: colors.neutral-200;
    out property <color> border-hover: colors.neutral-300;
    out property <color> outline: colors.neutral-300;
    out property <color> outline-variant: colors.neutral-200;
    
    // 兼容旧属性名
    out property <color> on-surface: text-primary;
    out property <color> on-surface-variant: text-secondary;
    out property <color> on-primary: text-on-primary;
    out property <color> secondary-container: primary-container;
    out property <color> on-secondary-container: primary;
    out property <color> on-success-container: success;
    out property <color> on-error-container: error;
    out property <color> scrim: colors.neutral-900;
    
    // 尺寸系统
    out property <Sizes> sizes: {
        p-xs: 4px,
        p-sm: 8px,
        p-md: 16px,
        p-lg: 24px,
        p-xl: 32px,
        
        s-xs: 4px,
        s-sm: 8px,
        s-md: 16px,
        s-lg: 24px,
        s-xl: 32px,
        
        r-xs: 4px,
        r-sm: 6px,
        r-md: 8px,
        r-lg: 12px,
        r-xl: 16px,
        
        h-xs: 24px,
        h-sm: 32px,
        h-md: 40px,
        h-lg: 48px,
        h-xl: 56px,
        
        font: 14px,
        icon: 16px,
        line: 1px,
    };
    
    // 优化的动画持续时间
    out property <duration> short: 120ms;
    out property <duration> medium: 200ms;
    out property <duration> long: 350ms;
    out property <duration> extra-long: 600ms;
    
    // 字体系统 - 跨平台字体栈
    out property <string> font-family: "PingFang SC, Microsoft YaHei, Helvetica Neue, Arial, sans-serif";
}
